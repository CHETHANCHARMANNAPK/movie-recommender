onment Configuration
# Copy this file to .env and fill in your actual values

# TMDB API Configuration
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (Optional - SQLite is used by default)
# DATABASE_URL=sqlite:///movies.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/moviedb

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration (for frontend)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500,http://127.0.0.1:5500
